    "@angular/cli": "6.0.8",
    "@angular/compiler-cli": "5.2.11",
    "@angular/language-service": "6.0.4",
    "@compodoc/compodoc": "1.1.3",
    "@types/jest": "23.0.2",
    "@types/lodash": "4.14.50",
    "@types/node": "6.0.60",
    "@types/vis": "4.21.4",

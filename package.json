    "collectCoverageFrom": [
      "**/src/app/**.{ts}",
      "!**/src/app/*.{ts}",
      "!**/src/app/_models/**.{ts}",
      "!**/src/app/auth/_models/**.{ts}",
      "!**/node_modules/**"
    ],
    "collectCoverage": true,
    "testURL": "http://localhost/",
    "transformIgnorePatterns": [
      "node_modules/(?!ngx-quill)"
    ]
  }
